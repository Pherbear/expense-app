<div style="margin-left: 60px; font-weight: bolder; color: purple; display: inline-block; margin-top: 30px;">all of {{currentUser.details.username}}'s trips here: 
  <div style="padding-top:5px">
    <button class="button button--add-trip" new:trip>
      Add Trip
    </button>
  </div>
</div>

<div object>
  <div array key="trips">
    {{#for trip in trips}}
    <a 
        object key:text="@innerText"
        key:id="{{trip.id}}"
        href="trip/{{trip.id}}"
        class="trips"
    >
        {{default trip.text "New Trip"}}
    </a>
    {{/for}}
  </div>
</div>
