<div class="trips_header">
  <div style="padding-top:5px">
    <button class="button button--add-trip" new:trip>
      Add Trip
    </button>
  </div>
  <div class="user_trips">
    {{currentUser.details.username}}'s trips: 
  </div>
</div>

<div object>
  <div array key="trips" class="trip_cards">
    {{#for trip in trips}}
    <div
      object
      key:text="@search"
      key:id="{{trip.id}}"
      key:trip-image="@search"
      class="trips"
    >
      <div class="edit_button_div">
        <button class="edit_button" edit:text >...</button>
      </div>
      <input update:trip-image type="file">
      <img target:trip-image="@attr:src" src="{{trip.tripImage}}" class="image">
      <a target:text="@innerText" href="trip/{{trip.id}}">
        {{default trip.text "New Trip"}}
      </a>
    </div>
    {{/for}}
  </div>
</div>
